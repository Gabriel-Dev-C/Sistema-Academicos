<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaAcademicos.Views.TelaDisciplinas"
             Title="Lista de Disciplinas">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Adicionar" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>

    <VerticalStackLayout
    Padding="30,0"
    Spacing="25">

        <SearchBar x:Name="txtsearch"
        Placeholder="Busca de Disciplina"
        TextChanged="txtsearch_TextChanged"/>

        <ListView x:Name="lstdisciplina">
            <ListView.Header>
                <Grid ColumnDefinitions="*, *, *, *">
                    <Label Grid.Column="0" Text="ID"/>
                    <Label Grid.Column="1" Grid.ColumnSpan="2" Text="Nome"/>
                    <Label Grid.Column="3" Text="Sigla"/>
                </Grid>
            </ListView.Header>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.ContextActions>
                            <MenuItem Text="Remover"
                                Clicked="MenuItem_Clicked"/>
                        </ViewCell.ContextActions>

                        <Grid ColumnDefinitions="*, *, *, *">
                            <Label Grid.Column="0" Text="{Binding Id}"/>
                            <Label Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding Nome}"/>
                            <Label Grid.Column="3" Text="{Binding Sigla}"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

    </VerticalStackLayout>

</ContentPage>