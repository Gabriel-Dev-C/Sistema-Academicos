<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SistemaAcademicos.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SistemaAcademicos"
    xmlns:views="clr-namespace:SistemaAcademicos.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="True"
    Shell.FlyoutBackgroundColor="#8c898f"
    Title="SistemaAcademicos">

    <Shell.FlyoutHeader>
        <Label Text="MENU" TextColor="Black" FontSize="Medium" HorizontalOptions="Center" Margin="0,20,0,15"/>
    </Shell.FlyoutHeader>

    <Shell.FlyoutFooter>
        <VerticalStackLayout
        Padding="16"
        Spacing="10">
            <Image Source="logo.png" WidthRequest="200"/>
            <Label Text="Copyright &#169; Gabriel C. Martins" FontSize="Small" TextColor="Black" HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </Shell.FlyoutFooter>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">

        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="FlyMainPage"
            Icon="home.png"/>

        <ShellContent
            Title="Períodos"
            ContentTemplate="{DataTemplate views:TelaPeriodos}"
            Route="telaperiodos"
            Icon="periodo.png"/>

        <ShellContent
            Title="Disciplinas"
            ContentTemplate="{DataTemplate views:TelaDisciplinas}"
            Route="telaperiodos"
            Icon="disciplina.png"/>

        <ShellContent
            Title="Cursos"
            ContentTemplate="{DataTemplate views:TelaCursos}"
            Route="telaperiodos"
            Icon="curso.png"/>

        <ShellContent
            Title="Sobre"
            ContentTemplate="{DataTemplate local:Sobre}"
            Route="Flysobre"
            Icon="inter.png"/>

        <ShellContent
            Title="Cadastro"
            ContentTemplate="{DataTemplate local:Cadastro}"
            Route="Flycadastro"
            Icon="cadastro.png"/>

    </FlyoutItem>

    <TabBar>

        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="FlyMainPage"
            Icon="home.png"/>

        <ShellContent
            Title="Períodos"
            ContentTemplate="{DataTemplate views:TelaPeriodos}"
            Route="telaperiodos"
            Icon="periodo.png"/>

        <ShellContent
            Title="Disciplinas"
            ContentTemplate="{DataTemplate views:TelaDisciplinas}"
            Route="telaperiodos"
            Icon="disciplina.png"/>

        <ShellContent
            Title="Cursos"
            ContentTemplate="{DataTemplate views:TelaCursos}"
            Route="telaperiodos"
            Icon="curso.png"/>

        <ShellContent
            Title="Sobre"
            ContentTemplate="{DataTemplate local:Sobre}"
            Route="Flysobre"
            Icon="inter.png"/>

        <ShellContent
            Title="Cadastro"
            ContentTemplate="{DataTemplate local:Cadastro}"
            Route="Flycadastro"
            Icon="cadastro.png"/>

    </TabBar>

</Shell>
